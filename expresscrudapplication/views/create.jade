        title #{title}
        link(rel='stylesheet' href='/css/mystyle.css')
    body 
        a(href='/') Home
        h1 Add Employee Deatails
        form(method="POST" action="/adddata")
            table
                tr
                    td
                        label Id:
                    td 
                        input(name="keyid" type="text" placeholder="enter _id")
                tr
                    td
